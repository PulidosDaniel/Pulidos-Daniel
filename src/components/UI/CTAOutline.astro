---
import { Icon } from "astro-icon/components";

interface Props {
	href: string;
	title: string;
	ariaLabel: string;
	AdditionalClass?: string;
	text: string;
	icon: string;
	size: number;
}

const { href, title, ariaLabel, AdditionalClass, text, icon, size } =
	Astro.props;
---

<a
	href={href}
	title={title}
	aria-label={ariaLabel}
	class={`bg-gray-100 text-ebony border-2 border-ebony w-full h-16 py-2 px-6 rounded-xl text-center text-xl hover:bg-accent hover:text-white hover:scale-105 transition-all duration-300 flex items-center justify-center gap-4 lg:gap-2 xl:text-xl ${AdditionalClass}`}
>
	<Icon name={icon} size={size} />
	{text}
</a>
