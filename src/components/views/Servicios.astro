---
import { servicios, tiposPisos } from "@data/servicios";
import { Icon } from "astro-icon/components";
---

<section id="servicios" class="py-20">
	<div class="container max-w-screen-xl mx-auto px-4 md:px-6">
		<h2
			class="text-accent font-bold text-4xl/[1.1] md:text-5xl/[1.1] space-y-4 mb-12 text-center"
		>
			Nuestros Servicios
		</h2>

		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
			{
				servicios.map((servicio) => (
					<div class="bg-white rounded-xl shadow-md p-6">
						<Icon
							name={servicio.icono}
							class="size-12 text-primary mb-4"
						/>
						<h3 class="text-xl text-balance font-medium mb-2 text-accent">
							{servicio.nombre}
						</h3>
						<p class="text-gray-600 text-base/relaxed text-balance font-normal">
							{servicio.descripcion}
						</p>
					</div>
				))
			}
		</div>

		<div class="bg-white rounded-xl shadow-md p-8">
			<h3 class="text-2xl font-bold mb-6 text-center text-ebony">
				Algunos de los Tipos de Pisos que Trabajamos
			</h3>
			<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
				{
					tiposPisos.map((tipo) => (
						<div class="bg-gray-100 rounded-lg p-4 text-center">
							<p class="text-ebony text-lg font-medium">{tipo}</p>
						</div>
					))
				}
			</div>
		</div>
	</div>
</section>
